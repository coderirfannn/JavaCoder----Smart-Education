<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>Student Dashboard - JavaCoder</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .card-text {
            max-height: 4.5em;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: normal;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
        }
    </style>
</head>
<body class="bg-gray-100 text-gray-900 font-sans">
    <div class="max-w-7xl mx-auto px-6 py-8">

        <!-- Header -->

        <div class="flex justify-between items-center mb-8">
        <a href="/dashboard" class="btn btn-secondary"> <- Back</a>

            <h2 class="text-3xl font-bold text-blue-700">Welcome, <%= user.fullName %> ðŸ‘‹</h2>
            <div class="space-x-4">

                <a href="/dashboard/student/top/teacher" class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg shadow">Top Teachers</a>
                <a href="/auth/logout" class="inline-block bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg shadow">Logout</a>
            </div>
        </div>

        <!-- Enrolled Courses -->
        <div class="bg-white shadow-lg rounded-xl p-6 mb-10">
            <h3 class="text-2xl font-semibold text-gray-800 mb-6">ðŸ“š Select Your Class</h3>

            <% if (userCourse && userCourse.length > 0) { %>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% userCourse.forEach(course => { %>
                        <div class="bg-gray-50 border border-gray-200 rounded-lg p-5 hover:shadow-md transition course-card">
                            <h4 class="text-xl font-bold text-blue-600 mb-2"><%= course.title %></h4>
                            <p class="text-gray-600 card-text mb-4"><%= course.description %></p>
                            <a href="/courses/<%= course._id %>" class="block w-full text-center bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition">View Course</a>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <p class="text-gray-500 italic">You are not enrolled in any courses yet.</p>
            <% } %>
        </div>

     
      
        
    </div>
</body>
</html>
