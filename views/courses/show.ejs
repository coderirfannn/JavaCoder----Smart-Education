<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title><%= course.title %> - Course Details</title>
</head>
<body class="container py-5 bg-light">

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><%= course.title %></h2>
        </div>

        <div class="card-body">
            <p class="lead"><%= course.description %></p>
            <p><strong>Teacher:</strong> <%= course.teacher.fullName %></p>

            <hr>
            <h4>Lectures</h4>

            <% if (course.lectures.length > 0) { %>
                <ul class="list-group mb-3">
                    <% course.lectures.forEach(lecture => { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="/lectures/lecture/<%= lecture._id %>"><%= lecture.title %></a>
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>
                <div class="alert alert-info">No lectures available for this course.</div>
            <% } %>

            <div class="d-flex justify-content-between mt-4">
                <a href="/dashboard/admin" class="btn btn-secondary">Back to Courses</a>
                <a href="/<%= course._id %>/lectures" class="btn btn-success">Add Lecture</a>
            </div>
        </div>
    </div>

</body>
</html>
