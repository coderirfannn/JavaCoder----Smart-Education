<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
  <title>Register - UPL Learning</title>
  <style>
    /* Background floating animation */
    @keyframes dynamicBackground {
      0%   { transform: scale(1) translate(0px, 0px); }
      20%  { transform: scale(1.03) translate(10px, -5px); }
      40%  { transform: scale(1.04) translate(-10px, 10px); }
      60%  { transform: scale(1.05) translate(15px, 5px); }
      80%  { transform: scale(1.03) translate(-5px, -10px); }
      100% { transform: scale(1) translate(0px, 0px); }
    }

    /* Form bounce & scale animation */
    @keyframes floatingForm {
      0%, 100% { transform: translateY(0) scale(1); }
      50% { transform: translateY(-8px) scale(1.01); }
    }

    /* Background styles */
    .background-container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background-image: url('/upload/adfg.png');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      z-index: -1;
      animation: dynamicBackground 30s ease-in-out infinite;
    }

    /* Form container */
    .form-container {
      width: 50%;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;
      z-index: 10;
    }

    /* Form box with motion */
    .form-box {
      width: 100%;
      max-width: 600px;
      background-color: white;
      opacity: 0.95;
      backdrop-filter: blur(10px);
      border-radius: 20px;
      padding: 30px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      animation: floatingForm 4s ease-in-out infinite;
    }
  </style>
</head>
<body class="font-sans">

  <!-- Background Image -->
  <div class="background-container"></div>

  <!-- Form Container -->
  <div class="form-container">
    <div class="form-box">
      <h2 class="text-3xl font-extrabold text-indigo-700 mb-6 text-center">Create your account</h2>

      <% if (success_msg) { %>
        <div class="bg-green-100 text-green-800 px-4 py-3 rounded mb-4 text-sm">
          <%= success_msg %>
        </div>
      <% } %>
      <% if (error_msg) { %>
        <div class="bg-red-100 text-red-800 px-4 py-3 rounded mb-4 text-sm">
          <%= error_msg %>
        </div>
      <% } %>

      <form action="/auth/register" method="POST" class="space-y-5">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
          <input type="text" name="fullName" required
                 class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
          <input type="email" name="email" required
                 class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Role</label>
          <select name="role" required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
            <option value="Student">Student</option>
            <!-- <option value="Teacher">Teacher</option> -->
            <option value="Admin">Admin</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
          <input type="password" name="password" required
                 class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
        </div>

        <button type="submit"
                class="w-full bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700 transition-all transform hover:scale-105 font-semibold">
          Register
        </button>
      </form>

      <p class="text-center text-sm text-gray-600 mt-6">
        Already have an account?
        <a href="/auth/login" class="text-indigo-600 font-semibold hover:underline">Login here</a>
      </p>
    </div>
  </div>

</body>
</html>
