<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
  <title>Login - JavaCoder</title>
  <style>
    /* Fade-in animation for the form */
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .fade-in-up {
      animation: fadeInUp 0.8s ease-out;
    }

    /* Enhanced background motion animation */
    @keyframes dynamicBackground {
      0%   { transform: scale(1) translate(0px, 0px); }
      20%  { transform: scale(1.03) translate(10px, -5px); }
      40%  { transform: scale(1.04) translate(-10px, 10px); }
      60%  { transform: scale(1.05) translate(15px, 5px); }
      80%  { transform: scale(1.03) translate(-5px, -10px); }
      100% { transform: scale(1) translate(0px, 0px); }
    }

    /* Fullscreen animated background */
    .background-container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background-image: url('/upload/adfg.png');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      z-index: -1;
      animation: dynamicBackground 30s ease-in-out infinite;
    }

    /* Form container to center it on the left half */
    .form-container {
      width: 50%;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;
      z-index: 10;
    }

    .form-box {
      width: 100%;
      max-width: 600px;
      background-color: white;
      opacity: 0.95;
      backdrop-filter: blur(10px);
      border-radius: 20px;
      padding: 30px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      animation: fadeInUp 0.8s ease-out;
    }
  </style>
</head>
<body class="font-sans">

  <!-- Background Image -->
  <div class="background-container"></div>

  <!-- Form Container -->
  <div class="form-container">
    <div class="form-box">
      <h2 class="text-3xl font-extrabold text-indigo-700 mb-6 text-center">Login to JavaCoder</h2>

      <% if (success_msg) { %>
        <div class="bg-green-100 text-green-800 px-4 py-3 rounded mb-4 text-sm">
          <%= success_msg %>
        </div>
      <% } %>
      <% if (error_msg) { %>
        <div class="bg-red-100 text-red-800 px-4 py-3 rounded mb-4 text-sm">
          <%= error_msg %>
        </div>
      <% } %>

      <form action="/auth/login" method="POST" class="space-y-5">
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
          <input type="email" name="email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" required>
        </div>

        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
          <input type="password" name="password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" required>
        </div>

        <button type="submit" class="w-full bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700 transition-all transform hover:scale-105 font-semibold">
          Login
        </button>
      </form>

      <p class="text-center text-sm text-gray-600 mt-6">
        Donâ€™t have an account? 
        <a href="/auth/register" class="text-indigo-600 font-medium hover:underline">Register here</a>.
      </p>
    </div>
  </div>

</body>
</html>
