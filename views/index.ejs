      <div class="space-x-4">
      <a href="/auth/about" class="bg-white text-indigo-600 font-semibold px-6 py-3 rounded mr-3 hover:bg-gray-100">About</a>

        <a href="/auth/login" class="text-gray-700 hover:text-indigo-600 font-medium">Login</a>
        <a href="/auth/register" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 transition">Register</a>
      </div>
    </div>
  </nav>

  <!-- Hero Section with Video Background -->
